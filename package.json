{
  "name": "@circle/cctp-mcp-server",
  "module": "src/index.ts",
  "type": "module",
  "version": "1.0.2",
  "description": "Model Context Protocol (MCP) server for Circle's Cross-Chain Transfer Protocol (CCTP) v2 - seamless USDC transfers across multiple blockchains",
  "bin": {
    "cctp-mcp-server": "./bin/cli.js"
  },
  "main": "build/index.js",
  "files": [
    "build/",
    "bin/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir build --target node",
    "build:http": "bun build src/server/http-server.ts --outdir build --target node --outfile http-server.js",
    "dev": "bun --watch src/index.ts",
    "start:http": "bun run src/server/http-server.ts",
    "dev:http": "bun --watch src/server/http-server.ts",
    "prepublishOnly": "bun run build && bun run build:http",
    "test": "bun test",
    "test:cctp": "bun run test-cctp.js",
    "transfer-test": "bun run transfer-test.ts",
    "transfer-test:js": "bun run transfer-test.js",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "release": "npm publish",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "changelog:latest": "conventional-changelog -p angular -r 1 > RELEASE_NOTES.md"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "conventional-changelog-cli": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@circle-fin/modular-wallets-core": "^1.0.11",
    "@modelcontextprotocol/sdk": "^1.7.0",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "viem": "^2.0.0",
    "zod": "^3.24.2"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "circle",
    "cctp",
    "cross-chain",
    "usdc",
    "stablecoin",
    "ethereum",
    "base",
    "avalanche",
    "arbitrum",
    "linea",
    "worldchain",
    "sonic",
    "unichain",
    "web3",
    "blockchain",
    "ai",
    "agent"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
